.page-header
  %h1 Users (#{@users.length})

.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th #
        %th Email
        %th Tag
        %th Date Added
        %th PersonType
    %tbody
      - unless @users.empty?
        - @users.each do |user|
          %tr.directory
            %td
              %a{:href => url("/users/#{user['Id']}")}= user['Id']
            %td= user['Email']
            %td= user['Tag']
            %td= Time.at user['CreationDate'].to_i
            %td= user['PersonType']


%ul.pager
  - unless @current_page == 1
    %li.previous
      %a{href: "?page=#{@current_page - 1}"} Â« Previous
  - if @users.any?
    %li.next
      %a{href: "?page=#{@current_page + 1}"} Next Â»
